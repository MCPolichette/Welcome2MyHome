                    <div class="form-group col-md-6">
                        <label for="trip-country">Country</label>
                        <input id="trip-country" type="text" class="form-control" placeholder="Nation">
                    </div>
                </div>
                <div class="form-group">
                    <label for="trip-notes">Additional notes for your guest</label>
                    <input id="trip-notes" type="text" class="form-control" placeholder="Write notes here about your stay that may be beneficial to your guest">
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button id="new-contact" type="submit" class="btn btn-primary">Create Contact</button>
    </div>
